{
  "name": "fsd-components",
  "publisher": "mangrimen",
  "displayName": "FSD Components",
  "description": "FSD components creator",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/MangriMen/feature-sliced-design-components"
  },
  "icon": "assets/images/icon.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "fsd-components.componentTemplate": {
          "type": "string",
          "default": "defaultComponent",
          "description": "Component template key"
        }
      }
    },
    "commands": [
      {
        "command": "fsd-components.openComponentsConfig",
        "title": "FSD Components: Open components config"
      },
      {
        "command": "fsd-components.changeComponentTemplate",
        "title": "FSD Components: Change component template"
      },
      {
        "command": "fsd-components.createComponent",
        "title": "Create FSD component"
      },
      {
        "command": "fsd-components.createSegment",
        "title": "Create FSD segment"
      },
      {
        "command": "fsd-components.createSlice",
        "title": "Create FSD slice"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "fsd-components.createComponent",
          "when": "false"
        },
        {
          "command": "fsd-components.createSegment",
          "when": "false"
        },
        {
          "command": "fsd-components.createSlice",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "fsd-components.createComponent",
          "group": "navigation",
          "when": "true"
        },
        {
          "command": "fsd-components.createSegment",
          "group": "navigation",
          "when": "true"
        },
        {
          "command": "fsd-components.createSlice",
          "group": "navigation",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.1",
    "fs-extra": "^11.1.1"
  }
}
